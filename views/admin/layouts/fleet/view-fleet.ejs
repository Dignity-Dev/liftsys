<div class="container-fluid">
    <div class="profile-foreground position-relative mx-n4 mt-n4">
        <div class="profile-wid-bg">
            <img src="/images/profile-bg.png" alt="" width="100%" class="profile-wid-img" />
        </div>
    </div>
    <% if (error) { %>
        <div class="error-message">
            <div class="alert alert-danger" role="alert">
                <strong>Error:</strong>
                <%= error %>
            </div>
        </div>
        <% } else if (fleet && fleet.length > 0) { %>
            <div class="pt-4 mb-4 mb-lg-3 pb-lg-4 profile-wrapper">
                <div class="row g-4">
                    <div class="col-auto">
                        <div class="">
                            <img src="/images/user.png" alt="user-img" class="img-thumbnail rounded-circle" width="150px" height="150px" />
                        </div>
                    </div>
                    <!--end col-->
                    <div class="col">
                        <div class="p-2">
                            <h3 class="text-black mb-1">
                                <%= fleet[0].fullName %>
                            </h3>
                            <p class="text-black text-opacity-75">fleet</p>
                            <% if (fleet[0].verifiedByAdmin) { %>
                                        <span class="badge bg-success">Verified</span>
                                    <% } else { %>
                                        <span class="badge bg-danger">Unverify</span>
                                    <% } %>
                            <div class="hstack text-black-50 gap-1">
                            </div>
                        </div>
                    </div>
                </div>
                <!--end row-->
            </div>
            <!-- Rest of the template... -->
            <div class="row">
                <div class="col-lg-12">
                    <div>
                        <div class="d-flex align-center profile-wrapper">
                            <!-- Nav tabs -->
                            <ul class="nav nav-pills animation-nav profile-nav gap-2 gap-lg-3 flex-grow-1" role="tablist">
                                <li class="nav-item">
                                    <button class="btn btn-success" onclick="window.history.back()">
                                        <i class="ri-arrow-go-back-fill"></i> Back </button>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link fs-14 active" data-bs-toggle="tab" href="#overview-tab" role="tab">
                                        <i class="ri-airplay-fill d-inline-block d-md-none"></i> <span class="d-none d-md-inline-block">Overview</span>
                                    </a>
                                </li>
                            </ul>
                            <!-- <div class="flex-shrink-0">
                                <a href="" class="btn btn-success"><i
                                        class="ri-edit-box-line align-bottom"></i> Edit Profile</a>
                            </div> -->
                        </div>
                        <!-- Tab panes -->
                        <div class="tab-content pt-4 text-muted">
                            <div class="tab-pane active" id="overview-tab" role="tabpanel">
                                <div class="row">
                                    <div class="col-xxl-3">
                                        <div class="card">
                                            <div class="card-body">
                                                <h5 class="card-title mb-3">Info</h5>
                                                <div class="table-responsive">
                                                    <table class="table table-bfleetless mb-0">
                                                        <tbody>
                                                            <tr>
                                                                <th class="ps-0" scope="row">Full Name :</th>
                                                                <td class="text-muted">
                                                                    <%= fleet[0].fullName %>
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <th class="ps-0" scope="row">Mobile :</th>
                                                                <td class="text-muted">
                                                                    <%= fleet[0].phoneNumber %>
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <th class="ps-0" scope="row">E-mail :</th>
                                                                <td class="text-muted">
                                                                    <%= fleet[0].emailAddress %>
                                                                </td>
                                                            </tr>
                                                        
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                            <!-- end card body -->
                                        </div>
                                        <!-- end card -->

                                    </div>
                                    <!--end col-->
                                    <div class="col-xxl-9">
                                        <div class="card">
                                            <div class="card-body">
                                                <h5 class="card-title mb-3">About</h5>
                                                <p>Hi I'm Sola Olatunde, It will be as simple as Occidental; in fact, it will be Occidental. To an English person, it will seem like simplified English, as a skeptical Cambridge friend of mine told me what
                                                    Occidental is European languages are members of the same family.</p> <hr>

                                                <h5 class="card-title mt-3 pb-4">Fleet Verification</h5>
                                              
                                                    <% if (fleet[0].verifiedByAdmin) { %>
                                                       <span class="badge bg-success">Verified</span>
                                                        </a>
                                                    <% } else { %>
                                                        <a href="/verify-fleet/<%= fleet[0].fleetID %>" class="btn btn-outline-primary"
                                                        onclick="return confirm('Are you sure you want to verify this fleet?');">
                                                        Verify Fleet
                                                        </a>
                                                    <% } %>

                                                    <br> <br>
                                                    <h5 class="card-title mt-3 pb-4">Manage Fleet</h5>

                                                    <div class="d-flex align-center g-4 m-2">
                                                        <div class="a px-4">
                                                            <% if (fleet[0].suspendStatus === "suspended") { %>
                                                            <a href="/unsuspend-fleet/<%= fleet[0].fleetID %>" class="btn btn-outline-primary"
                                                                onclick="return confirm('Are you sure you want to suspend this fleet?');">
                                                                unsuspend Fleet
                                                            </a>
                                                        <% } else { %>
                                                            <a href="/suspend-fleet/<%= fleet[0].fleetID %>" class="btn btn-outline-danger"
                                                            onclick="return confirm('Are you sure you want to suspend this fleet?');">
                                                            Suspend Fleet
                                                            </a>
                                                        <% } %>
                                                        </div>
                                                        <div class="a px-5">
                                                            <a href="/delete-fleet/<%= fleet[0].fleetID %>" class="btn btn-danger"
                                                                onclick="return confirm('Once you delete this action cannot be reverse');">
                                                                Delete Fleet
                                                            </a>
                                                        </div>
                                                    </div>
                                                <!--end row-->
                                            </div>
                                            <!--end card-body-->
                                        </div>
                                        <!-- end card -->
                                    </div>
                                    <!--end col-->
                                </div>
                                <!--end row-->
                            </div>

                        </div>
                        <!--end tab-content-->
                    </div>
                </div>
                <!--end col-->
            </div>
            <!--end row-->
            <% } else { %>
                <p class="text-muted">No fleet information found.</p>
                <% } %>


</div>
<!-- container-fluid -->
