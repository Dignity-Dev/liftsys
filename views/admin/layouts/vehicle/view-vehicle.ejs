<!-- container-fluid -->
<div class="container-fluid">

    <% if (error) { %>
        <div class="error-message">
            <div class="alert alert-danger" role="alert">
                <strong>Error:</strong>
                <%= error %>
            </div>
        </div>
        <% } else if (vehicle && vehicle.length> 0) { %>
            <!-- Vehicle Section -->
            <div class="row">
                <!-- Single vehicle Card -->
                <div class="col-md-4 col-xl-4">
                    <div class="card bvehicle shadow-sm mb-4">
                        <div class="card-header bg-light d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">Vehicle ID: <strong>
                                    <%= vehicle[0].vehicleID %>
                                </strong></h5>
                            <% if (vehicle[0].kycStatus=="approved" ) { %>
                                <p class="bg-success text-white rounded px-1">Approved</p>
                                <% } else if (vehicle[0].kycStatus=="rejected" ) { %>
                                    <p class="bg-danger text-white rounded px-1">Rejected</p>
                                    <% } else { %>
                                        <p class=""></p>
                                        <% } %>
                                            <!-- <span class="badge bg-warning"> </span> -->
                        </div>
                        <div class="card-body">
                            <p><strong>Vehicle Name:</strong>
                                <%= vehicle[0].vehicleName %>
                            </p>
                            <p><strong>Vehicle Color:</strong>
                                <%= vehicle[0].vehicleColor %>
                            </p>
                            <p><strong>Vehicle Type:</strong>
                                <%= vehicle[0].vehicleType %>
                            </p>
                            <p><strong>Vehicle Reg No</strong>
                                <%= vehicle[0].vehicleRegNo %>
                            </p>
                            <p><strong>Vehicle Model:</strong>
                                <%= vehicle[0].vehicleModel %>
                            </p>
                            <p><strong>Fleet User</strong>
                                <%= vehicle[0].fleetID %>
                            </p>
                            <!-- <p><strong>Assigned Status:</strong> <span class="badge bg-danger"> </span></p> -->
                        </div>
                        <div class="card-footer text-center">
                            <button onclick="window.history.back()" class="btn btn-primary btn-sm">Back</button>
                        </div>
                    </div>
                </div>

                <div class="col-md-8 col-xl-8">
                    <div class="card bvehicle shadow-sm mb-4">
                        <div class="card-body">
                            <img src="<%= vehicle[0].vehiclePhoto %>" alt="vehicle image"
                                style="width: 100%; max-height:500px; object-fit: cover; border-radius: 10px;">
                        </div>
                    </div>
                    <!-- check if the status of the vehicle is notactive -->
                    <% if (vehicle[0].kycStatus==='notactive' ) { %>
                        <!-- two button to approve or reject the vehicle -->
                        <button onclick="approveVehicle(event, '<%= vehicle[0].vehicleID %>')" class="btn btn-primary">
                            <i class="fa fa-check"></i> Approve this vehicle
                        </button>
                        <span class="mx-10"></span>
                        <button onclick="rejectVehicle(event, '<%= vehicle[0].vehicleID %>')" class="btn btn-danger">
                            <i class="fa fa-ban"></i> Reject this vehicle
                        </button>

                        <% } %>
                            <!-- check if the status of the vehicle is active -->
                            <% if (vehicle[0].status==='active' ) { %>
                                <button onclick="deactivateVehicle(event, '<%= vehicle[0].vehicleID %>')"
                                    class="btn btn-danger btn-sm">
                                    Deactivate
                                </button>

                                <% } %>

                                    <% if (vehicle[0].kycStatus=="approved" ) { %>
                                        <a href="/reject-vechicle/<%= vehicle[0].vehicleID  %>" class="btn btn-warning"
                                            style="margin-right: 40px;">Reject</a>
                                        <% } else { %>
                                            <a href="/approve-vechicle/<%= vehicle[0].vehicleID  %>"
                                                class="btn btn-primary" style="margin-right: 40px;">Approve</a>
                                            <% } %>

                                                <a href="<%= vehicle[0].vehicleDocuments %>"
                                                    download="<%= vehicle[0].vehicleID %>_VehicleDocument.pdf"
                                                    class="btn btn-primary mt-4" style="float: right;">Click to download
                                                    Vehicle Document</a>
                                                &nbsp;&nbsp;&nbsp;
                                                <a href="/delete-vechicle/<%= vehicle[0].vehicleID  %>"
                                                    class="btn btn-danger">Delete Vechicle</a>
                </div>
                
                <div class="l d-flex align-items-center pt-3">

                </div>
            </div>
            <% } else { %>
                <p class="text-muted">No vehicle information found.</p>
                <% } %>

</div>
<!-- container-fluid -->


<script>
    function approveVehicle(event, vehicleID) {
        event.preventDefault();
        Swal.fire({
            title: "Are you sure?",
            text: "You are about to approve this vehicle!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes, approve it!"
        }).then((result) => {
            if (result.isConfirmed) {
                fetch(`/vehicle/approve/${vehicleID}`, {
                    method: "PUT",
                    headers: {
                        "Content-Type": "application/json"
                    }
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            Swal.fire("Approved!", "The vehicle has been approved.", "success")
                                .then(() => location.reload());
                        } else {
                            Swal.fire("Error!", data.message, "error");
                        }
                    })
                    .catch(error => Swal.fire("Error!", "Something went wrong.", "error"));
            }
        });
    }

    function rejectVehicle(event, vehicleID) {
        event.preventDefault();
        Swal.fire({
            title: "Are you sure?",
            text: "You are about to reject this vehicle!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#d33",
            cancelButtonColor: "#3085d6",
            confirmButtonText: "Yes, reject it!"
        }).then((result) => {
            if (result.isConfirmed) {
                fetch(`/vehicle/reject/${vehicleID}`, {
                    method: "PUT",
                    headers: {
                        "Content-Type": "application/json"
                    }
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            Swal.fire("Rejected!", "The vehicle has been rejected.", "success")
                                .then(() => location.reload());
                        } else {
                            Swal.fire("Error!", data.message, "error");
                        }
                    })
                    .catch(error => Swal.fire("Error!", "Something went wrong.", "error"));
            }
        });
    }

    function deactivateVehicle(event, vehicleID) {
        event.preventDefault();
        Swal.fire({
            title: "Are you sure?",
            text: "You are about to deactivate this vehicle!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#d33",
            cancelButtonColor: "#3085d6",
            confirmButtonText: "Yes, deactivate it!"
        }).then((result) => {
            if (result.isConfirmed) {
                fetch(`/vehicle/deactivate/${vehicleID}`, {
                    method: "PUT",
                    headers: {
                        "Content-Type": "application/json"
                    }
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            Swal.fire("Deactivated!", "The vehicle has been deactivated.", "success")
                                .then(() => location.reload());
                        } else {
                            Swal.fire("Error!", data.message, "error");
                        }
                    })
                    .catch(error => Swal.fire("Error!", "Something went wrong.", "error"));
            }
        });
    }
</script>
